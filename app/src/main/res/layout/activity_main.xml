<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ptp.phamtanphat.stringresource0208.MainActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#f20"
        android:textSize="35sp"
        android:text="@string/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textPersonName"
        android:id="@+id/edittextten"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="@string/hint_NhapTen"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edittextsodienthoai"
        android:inputType="number"
        android:hint="@string/hint_NhapSoDT"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonxacnhan"
        android:text="@string/text_buttonXacNhan"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewthongtin"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
